<div class="modal-header">
    <button type="button" class="close" ng-click="vm.cancel()"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="modalTitle">@Lexicon.CreateNewDictionary</h4>
</div>

<div class="modal-body" style="padding-left: 50px; padding-right: 50px">
    <div class="form-horizontal">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" ng-model="vm.dictionary.name" required />

            <label>@Lexicon.Description</label>
            <input class="form-control" ng-model="vm.dictionary.description" />

            <label>From lamguage</label>
            <select class="form-control" ng-model="vm.dictionary.fromLanguage" required>
                @foreach (var item in OnlineDictionary.Helpers.OnlineDictionarySelectLists.Languages)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>

            <label>To language</label>
            <select class="form-control" ng-model="vm.dictionary.toLanguage" required>
                @foreach (var item in OnlineDictionary.Helpers.OnlineDictionarySelectLists.Languages)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>

            <label>@Lexicon.IsPublic</label>
            <input type="checkbox" ng-model="vm.dictionary.isPublic" />
        </div>
    </div>
    <button class="btn" ng-click="vm.createDictionary()">Save</button>
    <button class="btn" ng-click="vm.cancel()">Cancel</button>
</div>
