@model Guid

@{
    ViewBag.Title = "Dictionary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="DictionaryCtrl as vm">
    <async-page-with-loader is-loaded="vm.loaded" ng-init="vm.init('@Model')">
        <h2>{{vm.dictionary.name}}</h2>
        <p>@Lexicon.Description: {{vm.dictionary.description != null ? vm.dictionary.description : '@Lexicon.NoDescription'}}</p>
        <p>@Lexicon.Languages: {{vm.dictionary.sourceLanguage}} — {{vm.dictionary.targetLanguage}}</p>
        <p ng-if="!vm.dictionary.isMyDictionary">@Lexicon.Owner: {{vm.dictionary.ownerId}}</p>
        <p>@Lexicon.CreationDate: {{vm.dictionary.creationDate | date : "dd.MM.yyyy HH:mm"}}</p>
        <p>@Lexicon.LastChangedDate: {{vm.dictionary.lastChangeDate | date : "dd.MM.yyyy HH:mm"}}</p>

        <table class="table table-striped table-bordered table-hover" style="text-align:center">
            <thead>
                <tr>
                    <th style="text-align: center">#</th>
                    <th style="text-align: center">Sorce language</th>
                    <th style="text-align: center">Target language</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td></td>
                    <td><input class="form-control" type="text" ng-model="vm.phrasesPair.firstPhrase.text" placeholder="{{vm.dictionary.sourceLanguage}}" /></td>
                    <td><input class="form-control" type="text" ng-model="vm.phrasesPair.secondPhrase.text" placeholder="{{vm.dictionary.targetLanguage}}" /></td>
                    <td class="col-md-2">
                        <button class="btn btn-primary" ng-click="vm.createPhrasesPair()">Save</button>
                    </td>
                </tr>
                <tr ng-repeat="phrasesPair in vm.dictionary.phrasesPairs">
                    <td>{{$index + 1}}</td>
                    <td>{{phrasesPair.firstPhrase.text}}</td>
                    <td>{{phrasesPair.secondPhrase.text}}</td>
                    <td class="col-md-2">
                        <button class="btn btn-primary">Edit</button>
                        <button class="btn btn-primary">Remove</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </async-page-with-loader>
</div>

