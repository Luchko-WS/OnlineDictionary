<div class="modal-header">
    <button type="button" class="close" ng-click="vm.cancel()"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="modalTitle">Create dictionaty</h4>
</div>

<div class="modal-body" style="padding-left: 50px; padding-right: 50px">
    <div class="form-horizontal">
        <div class="form-group">
            <label>@Lexicon.DictionaryName</label>
            <input class="form-control" ng-model="vm.dictionary.name" required />

            <label>@Lexicon.Description</label>
            <input class="form-control" ng-model="vm.dictionary.description" />

            <label>@Lexicon.SourceLanguage</label>
            <input class="form-control" ng-model="vm.dictionary.sourceLanguage" disabled />

            <label>@Lexicon.TargetLanguage</label>
            <input class="form-control" ng-model="vm.dictionary.targetLanguage" disabled />

            <label>@Lexicon.IsPublic</label>
            <input type="checkbox" ng-model="vm.dictionary.isPublic"/>
        </div>
    </div>
    <button class="btn" ng-click="vm.editDictionary()">@Lexicon.Save</button>
    <button class="btn" ng-click="vm.cancel()">@Lexicon.Cancel</button>
</div>
