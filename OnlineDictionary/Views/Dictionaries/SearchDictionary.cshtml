<div class="modal-header">
    <button type="button" class="close" ng-click="vm.cancel()"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="modalTitle">@Lexicon.ExtendedSearch</h4>
</div>

<div class="modal-body" style="padding-left: 50px; padding-right: 50px">
    <div class="form-horizontal">
        <div class="form-group">
            <label>@Lexicon.DictionaryName</label>
            <input class="form-control" ng-model="vm.filter.name" />

            <label>@Lexicon.SourceLanguage</label>
            <select class="form-control" ng-model="vm.filter.sourceLanguage">
                @foreach (var item in OnlineDictionary.Helpers.OnlineDictionarySelectLists.Languages)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>

            <label>@Lexicon.TargetLanguage</label>
            <select class="form-control" ng-model="vm.filter.targetLanguage">
                @foreach (var item in OnlineDictionary.Helpers.OnlineDictionarySelectLists.Languages)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>

            <span ng-hide="vm.searchPar.hideOwnerId">
                <label>@Lexicon.Owner</label>
                <input class="form-control" ng-model="vm.filter.ownerId" />
            </span>
        </div>
    </div>
    <button class="btn" ng-click="vm.searchDictionary()">@Lexicon.Search</button>
    <button class="btn" ng-click="vm.cancel()">@Lexicon.Cancel</button>
</div>
