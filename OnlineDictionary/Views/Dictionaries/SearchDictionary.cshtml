<div class="modal-header">
    <button type="button" class="close" ng-click="vm.cancel()"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="modalTitle">@Lexicon.ExtendedSearch</h4>
</div>

<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-4">@Lexicon.DictionaryName</label>
            <div class="col-md-8">
                <input class="form-control" ng-model="vm.filter.name" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-4">@Lexicon.SourceLanguage</label>
            <div class="col-md-8">
                <select class="form-control" ng-model="vm.filter.sourceLanguage">
                    @foreach (var item in OnlineDictionary.Helpers.OnlineDictionarySelectLists.Languages)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-4">@Lexicon.TargetLanguage</label>
            <div class="col-md-8">
                <select class="form-control" ng-model="vm.filter.targetLanguage">
                    @foreach (var item in OnlineDictionary.Helpers.OnlineDictionarySelectLists.Languages)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group" ng-hide="vm.searchPar.hideOwnerId">
            <label class="control-label col-md-4">@Lexicon.Owner</label>
            <div class="col-md-8">
                <input class="form-control" ng-model="vm.filter.ownerId" />
            </div>
        </div>
    </div>
    <div class="modal-window-custom-footer">
        <button class="btn btn-primary" ng-click="vm.searchDictionary()">@Lexicon.Search</button>
        <button class="btn btn-default" ng-click="vm.cancel()">@Lexicon.Cancel</button>
    </div>
</div>
