@{
    ViewBag.Title = Lexicon.MyDictionaries;
}

<div class="page-with-extra-navbar">
    <h2>@Lexicon.MyDictionaries</h2>

    <div ng-controller="MyDictionariesCtrl as vm">
        <extra-bootstrap-navbar>
            <ul class="nav navbar-nav">
                <li><a href="" ng-click="vm.createDictionary()">@Lexicon.CreateNewDictionary</a></li>
            </ul>
            <form class="navbar-form navbar-right" style="margin-right: 20px">
                <div class="form-group">
                    <input type="text" class="form-control" ng-model="vm.searchDictionaryName" placeholder="@Lexicon.DictionaryName">
                </div>
                <div class="btn-group">
                    <button class="btn btn-default" type="button" ng-click="vm.searchDictionaryByName(vm.searchDictionaryName)">
                        @Lexicon.Search
                    </button>
                    <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" type="button">
                       <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="" ng-click="vm.extendedDictionarySearch()">@Lexicon.ExtendedSearch</a></li>
                        <li><a class="dropdown-item" href="" ng-click="vm.resetSearch()">@Lexicon.Reset</a></li>
                    </ul>
                </div>
            </form>
        </extra-bootstrap-navbar>

        <async-page-with-loader is-loaded="vm.loaded">
            <div class="row">
                <div ng-repeat="dictionary in vm.myDictionaries">
                    <dictionary-item ng-model="dictionary"
                                     edit-dictionary-function="vm.editDictionary"
                                     remove-dictionary-function="vm.removeDictionary"
                                     download-dictionary-function="vm.downloadDictionary"
                                     enable-editing="true">
                    </dictionary-item>
                </div>
                <div ng-if="vm.myDictionaries == null || vm.myDictionaries.length == 0" class="text-center">
                    <div><img ng-src="~/Content/images/empty.png" /></div>
                    <div>@Lexicon.NothingToShow</div>
                </div>
            </div>
        </async-page-with-loader>
    </div>
</div>


