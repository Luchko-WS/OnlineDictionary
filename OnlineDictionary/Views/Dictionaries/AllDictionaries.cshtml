
@{
    ViewBag.Title = Lexicon.AllDictionaries;
}

<div class="page-with-extra-navbar">
    <h2>@Lexicon.AllDictionaries</h2>

    <div ng-controller="AllDictionariesCtrl as vm">
        <extra-bootstrap-navbar>
            <ul class="nav navbar-nav">
                <li><a href="" ng-click="vm.extendedDictionarySearch()">@Lexicon.ExtendedSearch</a></li>
            </ul>
            <form class="navbar-form navbar-right" style="margin-right: 20px" ng-submit="vm.searchDictionaryByName(vm.searchDictionaryName)">
                <div class="form-group">
                    <input type="text" class="form-control" ng-model="vm.searchDictionaryName" placeholder="@Lexicon.DictionaryName">
                </div>
                <button type="submit" class="btn btn-default">@Lexicon.Search</button>
            </form>
        </extra-bootstrap-navbar>

        <async-page-with-loader is-loaded="vm.loaded">
            <div class="row">
                <div ng-repeat="dictionary in vm.publicDictionaries">
                    <dictionary-item ng-model="dictionary"
                                     download-dictionary-function="vm.downloadDictionary"
                                     enable-editing="false">
                    </dictionary-item>
                </div>
                <div ng-if="vm.publicDictionaries == null || vm.publicDictionaries.length == 0" class="text-center">
                    <div><img ng-src="~/Content/images/empty.png" /></div>
                    <div>@Lexicon.NothingToShow</div>
                </div>
            </div>
        </async-page-with-loader>
    </div>
</div>

